<div class="dashboard-menu group">
  <div class="dashboard-item dash-menu-wrapper group">
    <li><a href="#/dashboard">Home</a></li>
    <li><a href="#/mylistings">Listings</a></li>
    <li><a href="#/conversations" class="active">Messages</a></li>
    <li><a href="#/myreservations">Reservations</a></li>
    <li><a href="#/myreviews">Reviews</a></li>
  </div>
</div>


<div class="dashboard-item dash-messages">
  <% conversations.each(function(conversation) {%>

    <li>
      <a href="#/conversations/<%= conversation.escape("user_id") %>" class="message-preview">
        <img src="<%= conversation.escape("user_icon") %>" class="user-icon">
        <h3><%= conversation.escape("name") %></h3>
        <h4><%= conversation.messages().last().escape("subject") %></h4>
        <% if (conversation.messages().last().escape("read") === "false") { %>
          <h5>New!</h5>
        <% } %>
      </a>
    </li>
  <% }); %>

</div>
