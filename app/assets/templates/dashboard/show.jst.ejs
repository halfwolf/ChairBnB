
<div class="dashboard-menu group">
  <div class="dashboard-item dash-menu-wrapper group">
    <li><a href="#/dashboard" class="active">Home</a></li>
    <li><a href="#/mylistings">Listings</a></li>
    <li><a href="#/conversations">Messages</a></li>
    <li><a href="#/myreservations">Reservations</a></li>
    <li><a href="#/myreviews">Reviews</a></li>
  </div>
</div>

<div class="dashboard-content">
  <div class="dash-profile-group">
  <img src="<%= current_user.escape("avatar") %>">
  <h2><%= current_user.escape("name") %></h2>
  <a href="#">Edit Profile</a>
  </div>

  <div class="dash-new-messages">
    <h2>New Messages</h2>
    <% current_user.conversations().each(function(conversation) {%>
      <li>
        <a href="#/conversations/<%= conversation.escape("user_id") %>" class="main-message-preview group">
          <img src="<%= conversation.escape("user_icon") %>" class="user-icon">
          <h3><%= conversation.escape("name") %></h3>
          <% if (conversation.messages().last() && conversation.messages().last().escape("unread") === "false") { %>
            <h5>New!</h5>
          <% } %>
        </a>
      </li>
    <% }); %>
  </div>

  <div class="dash-new-reservations">
    <h2>New Reservations</h2>

  </div>
</div>
